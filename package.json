{
  "name": "invigleye",
  "version": "1.0.0",
  "description": "Physical Exam Invigilation Desktop App",
  "main": "main/main.js",
  "scripts": {
    "start": "npm rebuild better-sqlite3 && node backend/database/migrate.js && concurrently \"npm run react:dev\" \"npm run backend\" \"npm run python\" \"wait-on http://localhost:3000 && electron .\"",
    "backend": "node backend/server.js",
    "python": "source venv/bin/activate && python backend/python_server.py",
    "react:dev": "vite"
  },
  "keywords": [
    "electron",
    "invigilation",
    "exam",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "11.7.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.invigleye.app",
    "productName": "InvigilEye",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "backend/**/*",
      "!backend/uploads/*",
      "backend/uploads/README.md",
      "db/.gitkeep",
      "!db/*.db",
      "package.json"
    ],
    "asarUnpack": [
      "backend/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "db",
        "to": "db",
        "filter": [
          ".gitkeep"
        ]
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
